<div class="showactivity">
<%= render 'common/flash' %>
<div class="row">
<div class="small-6 small-centered small-centered columns">
<div class="panel">
  <h3> <%= pluralize(@activity.users.count, "FitBud") %> selected <%= @activity.name %> too! </h3>
  <% @activity.users.each do |user| %>
    <div>

      <!-- show users who listed this particular activity -->
      <%#= user.avatar %>
      <%= link_to(user_path(user)) do %>
        <%# image_tag user.avatar(:thumb) %>
        <p><%= user.username.capitalize %> </p>
      <% end %>
      <!-- request redirect to page where you can send message and invite -->

    </div>
     </div>
  <% end %>
</div>
</div>
</div>


