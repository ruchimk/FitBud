<%= render 'shared/flash' %>
<section class="inbox">
  <h2> <%= link_to 'Send New Message', new_user_message_path %> </h2>
  <div class="sent">
    <h1> SENT (<%= @sent_messages.count %>) </h1>
      <% @sent_messages.each do |message| %>
        <h3><%=  message.title %></h3>
        <p> <%= message.body %> </p>
        <%= link_to 'delete', user_message_path(user_id: current_user.id, id: message.id), method: :delete %>

      <% end %>
  </div>
  <div class="received">
    <h1> RECEIVED (<%= @received_messages.count %>) </h1>
    <% @received_messages.each do |message| %>
      <h3><%=  link_to message.title, user_message_path(user_id: message.recipient_id, id: message.id) %> </h3>
      <p><%= message.body %> </p>

    <% end %>
  </div>
</section>
