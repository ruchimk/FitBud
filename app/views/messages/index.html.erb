<div class="small-6 small-centered small-centered columns">
<div class="panel">
<%= render 'common/flash' %>
<section class="inbox">
  <h2> <%= link_to 'Send New Message', new_user_message_path(current_user) %> </h2>
  <div class="sent">
    <h1> SENT (<%= current_user.sent_messages.count %>) </h1>
      <% current_user.sent_messages.each do |message| %>
        <h3><%=  message.title %></h3>
        <p> <%= message.body %> </p>
        <%= link_to 'delete', user_message_path(user_id: current_user.id, id: message.id), method: :delete %>

      <% end %>
  </div>
  <div class="received">
    <h1> RECEIVED (<%= current_user.received_messages.count %>) </h1>
    <% current_user.received_messages.each do |message| %>
      <h3><%=  link_to message.title, user_message_path(user_id: message.recipient_id, id: message.id) %> </h3>
      <p><%= message.body %> </p>

    <% end %>
  </div>
</section>
</div>
</div>
