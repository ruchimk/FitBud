<div class="small-6 small-centered small-centered columns">
  <div class="panel">
<div class="edituser">
  <h2 class="devise-forms">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :multipart => true } ) do |f| %>

  <%= devise_error_messages! %>

  <div class="field"><%= f.label :avatar %><br />
  <%= f.file_field :avatar %></div>

   <div class="field"><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true, placeholder: 'Username' %></div>

  <div class="field"><%= f.label :email %><br />
  <%= f.email_field :email, placeholder: 'Email' %></div>

  <div class="field"><%= f.label :location %><br />
  <%= f.text_field :location, placeholder: 'City, State (eg. Rockville, MD)'%></div>


   <div class="field"><%= f.label :zip_code %><br />
    <%= f.text_field :zip_code, placeholder: 'Zipcode (eg. 20001)'%></div> %>

   <div class="field"><%= f.label :age %><br />
  <%= f.number_field :age, placeholder: 'Age' %></div>

   <div class="field"><%= f.label :goals %><br />
  <%= f.text_field :goals, placeholder: 'eg. Train for a marathon, Find a running partner, Get in shape for..., etc.' %></div>

    <div class="field"><%= f.label :about_me %><br />
  <%= f.text_field :about_me, placeholder: 'Anything you else you want your FitBud to know!' %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field"><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, :autocomplete => "off", placeholder: 'Password' %></div>

  <div class="field"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, placeholder: 'Confirm Password' %></div>

  <div class="field"><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password %></div>

  <a class="button round"><%= f.submit "Update" %></a>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <a class="button round"><%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></a></p>

<%= link_to "Back", :back %>

</div>
</div>
</div>
